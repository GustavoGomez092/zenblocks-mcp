{
	"name": "zenblocks-mcp",
	"version": "1.0.0",
	"description": "An MCP server that helps ypu create zen blocks for your Wordpress theme",
	"keywords": [
		"mcp",
		"model-context-protocol",
		"zenblocks",
		"wordpress",
		"typescript",
		"ai-tools",
		"claude",
		"copilot"
	],
	"license": "MIT",
	"author": "Gustavo Gomez",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc",
		"clean": "rm -rf build",
		"prepublishOnly": "npm run clean && npm run build && chmod +x build/index.js",
		"start": "node dist/index.js",
		"dev": "npm run prebuild && npm run build && npx tsx watch src/index.ts",
		"biome:check-staged": "lint-staged",
		"biome:check": "npx biome check --write",
		"prepare": "husky",
		"prebuild": "mkdir -p dist/docs && cp -R src/docs/* dist/docs/"
	},
	"bin": {
		"zenblocks": "dist/index.js"
	},
	"lint-staged": {
		"**/*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"npx biome check --write"
		]
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/node": "^24.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.17.3",
		"zod": "^3.25.76"
	}
}
